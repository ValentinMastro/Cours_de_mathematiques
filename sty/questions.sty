\newcommand{\exercice}
{
    \bigskip
    \setcounter{question}{0}%
    \setcounter{subpart}{0}%
    \stepcounter{exercice}%
    \par\underline{\textbf{Exercice \theexercice~:}}~%
}

\newcommand{\EXERCICE}[1]
{
    % #1 : nombre de points que vaut l'exercice
    \bigskip
    \setcounter{question}{0}%
    \setcounter{subpart}{0}%
    \stepcounter{exercice}%
    \par\underline{\textbf{Exercice \theexercice~:}}~~~\hfill [#1 points]\\
}

\newcommand{\question}
{
    \setcounter{subpart}{0}%
    \stepcounter{question}%
    \par\hspace{2em}\textbf{Q\arabic{question})}~%
}

\newcommand{\subpart}[1]
{
    \stepcounter{subpart}%
    \textbf{\alph{subpart})}~%
    #1%
    \par\hspace{3.8em}%
}


