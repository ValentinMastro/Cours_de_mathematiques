\newcommand{\exercice}[1][Rien]
{
    % #1 (optionel) : nombre de points que vaut l'exercice
    \bigskip
    \setcounter{question}{0}
    \setcounter{subpart}{0}
    \stepcounter{exercice}
    
    \par\underline{\textbf{Exercice \theexercice~:~%
    \ifthenelse{\equal{#1}{Rien}}%
    {}{#1 points}%
    }}%
}

\newcommand{\question}
{
    \setcounter{subpart}{0}
    \stepcounter{question}
    \par\hspace{2em}\textbf{\arabic{question})}
}

\newcommand{\subpart}
{
    \stepcounter{subpart}
    \par\hspace{4em}\textbf{\alph{subpart})}
}


\newenvironment{questions}
{
    \setcounter{question}{0}
    \setcounter{part}{0}
    \setcounter{subpart}{0}
}
