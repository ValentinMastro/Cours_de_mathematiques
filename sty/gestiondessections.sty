\newcommand{\ajouterChapitre}[1]{\subfile{#1}}

\newcommand{\titreChapitre}[2]{
    % #1 : numéro du chapitre
    % #2 : titre du chapitre
    \clearpage
    
    {\sffamily%
    \color{rouge}\Huge%
    \begin{tikzpicture}
