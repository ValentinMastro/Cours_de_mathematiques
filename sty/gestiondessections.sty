\newcommand{\paragraphe}[3]
{
    % Modèle de base pour les différents paragraphes
    %       #1 ->  couleur du texte
    %       #2 ->  type de paragraphe
    %       #3 ->  contenu
    \medskip
    \par\textcolor{#1}{\underline{#2 :}}\\
    \textcolor{#1}{#3}
}

